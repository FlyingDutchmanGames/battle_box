<% {rows, cols} = Game.dimensions(@game) %>

<div class="robot-game-board" style='<%= "grid-template: repeat(#{rows}, max-content) / repeat(#{rows}, max-content)" %>'>
  <%= for {location, terrain_type} <- @game.terrain do %>
    <%= render("game_board_piece.html", terrain: terrain_type, location: location) %>
  <% end %>
</div>

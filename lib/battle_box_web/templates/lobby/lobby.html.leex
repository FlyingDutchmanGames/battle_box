<script>window.useLiveView = true</script>
<h1>Lobby: <%= "#{@lobby.user.github_login_name} / #{@lobby.name}" %></h1>
<h2>Live Games</h2>
<div class="games">
  <%= for game <- @live_games do %>
    <div class="game">
      <h3>Game: <a href='<%= Routes.live_path(@socket, BattleBoxWeb.Game, game.game_id)%>'><%= game.game_id %></a></h3>
      <%= for bot <- game.game.game_bots do %>
        <h4>Score <%= bot.player %>: <%= bot.score %></h2>
      <% end %>
    </div>
  <% end %>
</div>

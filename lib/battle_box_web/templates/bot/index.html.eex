<h1>Bots</h1>
<a href="<%= Routes.bot_path(@conn, :new) %>">New Bot</a>
<div class="bots">
<%= for bot <- @bots do %>
  <div class="bot" style="border: 1px solid black; padding: 10px; margin: 10px;">
    <div class="name">Name: <%= bot.name %></div>
    <div class="id">ID: <%= bot.id %></div>
  </div>
<% end %>
</div>
